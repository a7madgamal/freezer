{
  "compilerOptions": {
    "module": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "build/ts",
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "noImplicitAny": false,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "lib": ["es2021", "dom"],
    "declaration": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src"]
}
